<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_54dp"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:background="@color/white"
    android:elevation="5dp"
    app:contentInsetEnd="@dimen/nol_dp"
    app:contentInsetLeft="@dimen/nol_dp"
    app:contentInsetRight="@dimen/nol_dp"
    app:contentInsetStart="@dimen/nol_dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5.0">

        <FrameLayout
            android:id="@+id/f_btn_home"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/width_28dp"
                    android:layout_height="@dimen/height_28dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home_active" />

            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/f_btn_heart"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_heart"
                android:padding="2dp"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_heart" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f_btn_trolley"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                android:padding="2dp"
                android:id="@+id/btn_trolley"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_trolley" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f_btn_search"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:padding="1dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f_btn_account"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_account"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>